generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum Analyte {
  glucose
  creatinine
}

model Observation {
  id String @id @default(uuid())
  subjectId String // inexistant Subject table
  analyte Analyte
  loinc String?
  valueRaw Decimal
  unitRaw String
  measuredAt DateTime
  rawPayload Json?

  createdAt DateTime @default(now())
  deletedAt DateTime?

  @@index([subjectId, analyte, measuredAt])
  @@index([subjectId, loinc, measuredAt])
}